@model DiplomovaPrace.Models.Interpret

@{
    ViewBag.Title = "Nový interpret";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Interpret", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2></h2>
    <div class="form-horizontal">
        <br />
        <h4>Vytvořit interpreta</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <h5>@Html.Label("Název interpreta:", htmlAttributes: new { @class = "control-label col-md-5" })</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nazev, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nazev, "", new { @class = "text-danger" })
                @if (ViewBag.InterpretVytvoreniChyba != null)
                {
                    <div id="duplicitniInterpretAlert" class="alert alert-danger" role="alert">
                        @ViewBag.InterpretVytvoreniChyba
                    </div>
                }
            </div>
        </div>

  

        <div class="form-group">
            <input type="submit" value="Odeslat žádost" class="btn btn-success" />
        </div>
    </div>
        }

        <div>
            @Html.ActionLink("Často kladené otázky", "../Account/FAQ")
        </div>
