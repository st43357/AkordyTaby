@model DiplomovaPrace.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Zapomenuté heslo";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="~/Content/register.css" />

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</head>
<body>
    <h2></h2>

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4></h4>
        <hr />

        <div class="container">
            <div class="d-flex justify-content-center h-100">
                <div class="card">

                    <div class="card-header">
                        <h3>Zapomenuté heslo</h3>
                        <div class="d-flex justify-content-end social_icon">
                            <span><i class="fab fa-facebook-square"></i></span>
                            <span><i class="fab fa-google-plus-square"></i></span>
                            <span><i class="fab fa-twitter-square"></i></span>
                        </div>
                    </div>
                    <div class="card-body">

                        <form>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Email</span>
                                </div>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                <div class="container">
                                    <div class="row">
                                        @Html.ValidationMessageFor(model => model.Email, "Email nesmí být prázdný.", new { @class = "alert alert-danger" })
                                    </div>
                                </div>
                            </div>
                        </form>

                        <div class="form-group">
                         
                        <input type="submit" class="btn btn-default float-right" value="Obnovit heslo" />
                          
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex justify-content-center links">
                            Nemáte ještě účet?
                            @Html.ActionLink("Vytvořit účet", "Register")
                        </div>
                        <div class="d-flex justify-content-center links">                            
                            @Html.ActionLink("Přihlášení", "Login")
                        </div>

                    </div>
                </div>
            </div>
        </div>
        }

    </body>
</html>
