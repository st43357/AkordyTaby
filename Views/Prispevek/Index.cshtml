@model IEnumerable<DiplomovaPrace.Models.Prispevek>

@{
    ViewBag.Title = "Příspěvky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /> 

<h4>Nejnovější příspěvky</h4>


<table id="selectedColumn" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                @Html.DisplayNameFor(model => model.NazevPisne)
            </th>
            <th class="th-sm">
                @Html.DisplayNameFor(model => model.Interpret.Nazev)
            </th>
            <th class="th-sm">
                @Html.DisplayNameFor(model => model.Autor.Prezdivka)
            </th>
            <th class="th-sm">
                @Html.DisplayNameFor(model => model.DatumPridani)
            </th>
            <th class="th-sm">
               
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prispevek in Model)
        {
        <tr>
            <td>@Html.ActionLink(@prispevek.NazevPisne, "../Prispevek/KonkretniPrispevek", new { id = @prispevek.Id })</td>
            <td>@Html.ActionLink(@prispevek.Interpret.Nazev, "../Interpret/KonkretniInterpret", new { id = @prispevek.Interpret.Id })</td>
            <td>@Html.ActionLink(@prispevek.Autor.Prezdivka, "../Uzivatel/Index", new { prezdivkaUzivatele = @prispevek.Autor.Prezdivka })</td>
            <td>@prispevek.DatumPridani</td>
            <td>@Html.ActionLink("Zobrazit", "../Prispevek/KonkretniPrispevek", new { id = prispevek.Id }, new { @class = "btn btn-success" })</td>
        </tr>
        }
    </tbody>
</table>
    
<script>
    $(document).ready(function () {
        $('#dtOrderExample').DataTable({
            columnDefs: [{
                orderable: false,
                targets: 3
            }]
        });
        $('.dataTables_length').addClass('bs-select');
    });
</script>